<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Employees</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <!-- Centered Navbar -->
  <nav class="navbar-centered">
    <div class="nav-inner">
      <a href="/" class="navbar-logo">ðŸ’¼ SalaryApp</a>
      <div class="nav-links">
        <% if (user) { %>
          <a href="/employees">Employees</a>
          <!-- <a href="/payrolls">Payrolls</a> -->
          <a href="/auth/sign-out" class="btn btn-secondary">Sign Out</a>
        <% } else { %>
          <a href="/auth/sign-up">Sign Up</a>
          <a href="/auth/sign-in" class="btn btn-secondary">Sign In</a>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container">
    <h1>Employee Directory</h1>

    <% if (foundEmployees.length > 0) { %>
      <div class="employee-list">
        <% foundEmployees.forEach((employee) => { %>
          <div class="employee-card">
            <img src="<%= employee.image.url %>" class="employee-img" alt="Image of <%= employee.name %>">
            <h3><%= employee.name %></h3>
            <p><strong>Position:</strong> <%= employee.position %></p>
            <p><strong>Salary:</strong> BHD <%= employee.salary %></p>
            <a href="/employees/<%= employee._id %>" class="btn btn-secondary">Manage</a>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No employees found.</p>
    <% } %>

    <p class="login-link">
      <a href="/employees/new">Add New Employee</a>
    </p>
  </div>
</body>
</html>
