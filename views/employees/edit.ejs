<body>
  <h1>Test: Edit Page</h1>

  <form action="/employees/<%= foundEmployee._id %>?_method=PUT" method="POST">

    <div>
      <label for="name">Employee Name:</label>
      <input type="text" name="name" id="name" value="<%= foundEmployee.name %>">
    </div>

    <div>
      <label for="position">Employee Position:</label>
      <input type="text" name="position" id="position" value="<%= foundEmployee.position %>">
    </div>

    <div>
      <label for="salary">Employee Salary:</label>
      <input type="text" name="salary" id="salary" value="<%= foundEmployee.salary %>">
    </div>

    <button type="submit">Update Informations</button>
  </form>
  
